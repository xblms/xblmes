@page
@{ Layout = "_LayoutHome"; }
@section Styles{
    <style>
        html {
            margin: 0;
            padding: 0;
        }
        body {
            margin: 0;
            padding: 0;
        }
    </style>
}
<div class="position-relative">
    <iframe :src="'/sitefiles/assets/lib/PDFJS/web/Viewerapp.html?file='+url" :style="{height: ($(window).height()-6) + 'px'}" style="width:100%;height:100%;"></iframe>
</div>
<div style="position:fixed;right:5%;top:60%;" class="animate__animated animate__fadeInRightBig">
    <div>
        <div class="mb-3 text-center">
            <el-button circle class="border-0 bg-transparent" v-if="isLike" v-on:click="btnLikeClick"><i class="bi bi-star-fill fs-1 text-success"></i></el-button>
            <el-button circle class="border-0 bg-transparent" v-else v-on:click="btnLikeClick"><i class="bi bi-star fs-1 text-dark"></i></el-button>
            <div>{{ likes }}</div>
        </div>
        <div class="mb-3 text-center">
            <el-button circle class="border-0 bg-transparent" v-if="isCollect" v-on:click="btnCollectClick"><i class="bi bi-heart-fill fs-1 text-success"></i></el-button>
            <el-button circle class="border-0 bg-transparent" v-else v-on:click="btnCollectClick"><i class="bi bi-heart fs-1 text-dark"></i></el-button>
            <div>{{ collects }}</div>
        </div>
        <div class="mb-2 text-center">
            <el-button circle class="p-0 border-0 bg-transparent" v-on:click="utils.closeLayerSelf"><i class="bi bi-sign-turn-slight-left display-2 text-dark"></i></el-button>
        </div>
    </div>
</div>
@section Scripts{
    <script src="/sitefiles/assets/js/app/knowledges/knowledgesView.js" type="text/javascript"></script>
}