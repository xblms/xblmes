@page
@{ Layout = "_LayoutApp"; }
@section Styles{
    <style>
        .el-form-item {
            margin-bottom: 0px;
        }
    </style>
}
<el-card class="mb-3">
    <el-input placeholder="关键字查询" v-model="form.keyWords" siza="small">
        <el-button slot="append" icon="el-icon-search" v-on:click="btnSearchClick" size="small"></el-button>
    </el-input>
</el-card>
<div v-if="total>0">
    <div class="ms-3 position-relative card-hover-with-icon" v-for="(paper,index) in list" v-on:click="btnViewClick(paper)">
        <div class="position-absolute top-50 start-0 translate-middle">
            <div class="position-relative">
                <i class="bi bi-person-check fs-1 rounded-3 px-1 card-icon" :class="paper.submitType==='Submit'?'text-success':'text-warning'"></i>
                <span class="position-absolute top-100 start-100 translate-middle mt-1 fs-6">{{ index+1 }}</span>
            </div>
        </div>
        <el-card shadow="hover" class="mb-2">
            <div class="mb-3">
                <el-link :underline="false" v-on:click.stop="btnViewClick(paper)">
                    <span :class="paper.submitType==='Submit'?'text-success':''">{{ paper.title }}</span>
                </el-link>
            </div>
            <div class="row align-items-center g-3 ms-3">
                <div class="col">
                    <ul class="list-inline fw-light">
                        <li class="list-inline-item fs-5">
                            <i class="el-icon-date me-2"></i>有效期
                        </li>
                    </ul>
                    <ul class="list-inline fw-light">
                        <li class="list-inline-item fs-5">
                            {{ paper.examStartDateTimeStr }}
                        </li>
                    </ul>
                    <ul class="list-inline fw-light">
                        <li class="list-inline-item fs-5">
                            {{ paper.examEndDateTimeStr }}
                        </li>
                    </ul>
                </div>
                <div class="col-auto">
                    <div class="bg-light p-2 rounded-pill">
                        <el-button type="success" plain icon="el-icon-s-order" class="rounded-pill" disabled v-if="paper.submitType==='Submit'">已提交</el-button>
                        <el-button type="warning" plain icon="el-icon-s-order" class="rounded-pill" v-on:click.stop="btnViewClick(paper)" v-else>去填写</el-button>
                    </div>
                </div>
            </div>
        </el-card>
    </div>
    <div class="my-5 text-center me-5">
        <el-button icon="el-icon-refresh-right" v-if="list.length>0 && list.length<total" v-on:click="btnLoadMoreClick" :loading="loadMoreLoading">加载更多</el-button>
        <span v-else class="fw-light">没有更多了</span>
    </div>
</div>
<div class="pt-10" v-else>
    <el-empty></el-empty>
</div>
<div class="py-8"></div>
@await Html.PartialAsync("_PartialAppMenu")

@section Scripts{
    <script src="/sitefiles/assets/js/app/exam/examQuestionnaire.js" type="text/javascript"></script>
}