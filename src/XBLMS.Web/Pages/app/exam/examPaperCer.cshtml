@page
@{ Layout = "_LayoutApp"; }
@section Styles{
    <style>
        .el-form-item {
            margin-bottom: 0px;
        }
        .el-card__body, .el-main{
            padding:15px;
        }
    </style>
}
<div style="position:fixed;left:0;top:0;width:100%;" class="text-center py-3 bg-white z-1">
    我的证书
</div>
<div class="pb-8"></div>
<div class="z-2">
    <div class="mb-3">
        <el-input prefix-icon="el-icon-search" clearable placeholder="关键字查询" v-model="form.keyWords">
            <el-button slot="append" icon="el-icon-search" v-on:click="btnSearchClick">查 询</el-button>
        </el-input>
    </div>
    <div v-if="list && list.length>0">
        <div v-for="(cer,index) in list" v-on:click="btnViewCer(cer)">
            <el-card shadow="hover" class="mb-3">
                <div slot="header">
                    <span class="fw-bold">{{ cer.cerName }}【{{ cer.cerNumber }}】</span>
                </div>
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <div class="position-relative">
                            <i class="bi bi-award fs-1 text-warning"></i>
                            <span class="position-absolute top-100 start-50 translate-middle mt-1 fs-6">{{ index+1 }}</span>
                        </div>
                    </div>
                    <div>
                        <div class="fs-5">
                            <div>{{ cer.awartDate }}</div>
                        </div>
                    </div>
                    <div>
                        <img :src="cer.cerImg" height="50" />
                    </div>
                </div>
            </el-card>
        </div>
        <div class="my-5 text-center">
            <span class="fw-light fs-6">没有更多了</span>
        </div>
    </div>
    <div class="pt-10" v-else>
        <el-empty></el-empty>
    </div>
</div>
<div class="py-8"></div>
<div style="position:fixed;left:0;bottom:0;width:100%;" class="text-center mb-5 animate__animated animate__fadeInUp">
    <el-button-group class="btn-group p-1 bg-gray-300 rounded-pill">
        <el-button v-on:click="location.href=utils.getRootUrl('mine')" icon="el-icon-back" class="rounded-pill" type="primary">返 回</el-button>
    </el-button-group>
</div>
@section Scripts{
    <script src="/sitefiles/assets/js/app/exam/examPaperCer.js" type="text/javascript"></script>
}