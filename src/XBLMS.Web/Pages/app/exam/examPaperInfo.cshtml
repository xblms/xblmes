@page
@{ Layout = "_LayoutApp"; }
@section Styles{
    <style>
        .number{
            color:red;
            font-size:28px;
        }
    </style>
}
<el-card>
    <div slot="header" class="text-center pt-3">
        <span class="fw-bold"><i class="el-icon-s-order me-2"></i>{{ item.title }}</span>
    </div>
    <div class="row">
        <div class="col-md-12 col-12">
            <div class="row text-center" v-if="item.examStartDateTimeLong>0 && !isStart">
                <div class="col-md-12 mb-5">
                    <div>
                        <el-statistic :value="item.examStartDateTimeLong" class="text-warning"
                                      time-indices format="DD天HH小时mm分钟ss秒" v-on:finish="timingFinish"
                                      title="距离开考还剩：">
                        </el-statistic>
                    </div>
                </div>
            </div>
            <div class="row gy-3">
                <div class="col-xl-6 col-lg-6 col-md-6 col-6">
                    <div class="card rounded-0 bg-white border-top border-muted border-5 card-hover-with-icon">
                        <div class="card-body p-3">
                            <div class="d-flex align-items-center justify-content-between">
                                <div>
                                    <div class="mb-3 fw-bold">
                                        <span>{{ item.totalScore }}</span>
                                        分
                                    </div>
                                    <p class="text-muted fs-6">试卷总分</p>
                                </div>
                                <div class="icon-shape icon-sm rounded-circle text-muted card-icon">
                                    <i class="bi bi-check-circle-fill fs-3"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-xl-6 col-lg-6 col-md-6 col-6">
                    <div class="card rounded-0 bg-white border-top border-muted border-5 card-hover-with-icon">
                        <div class="card-body p-3">
                            <div class="d-flex align-items-center justify-content-between">
                                <div>
                                    <div class="mb-3 fw-bold">
                                        <span>{{ item.passScore }}</span>
                                        分
                                    </div>
                                    <p class="text-muted fs-6">及格分</p>
                                </div>
                                <div class="icon-shape icon-sm rounded-circle text-muted card-icon">
                                    <i class="bi bi-check-circle fs-3"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-xl-12 col-lg-12 col-md-12 col-12">
                    <div class="card rounded-0 bg-white border-top border-muted border-5 card-hover-with-icon">
                        <div class="card-body p-3">
                            <div class="d-flex align-items-center justify-content-between">
                                <div v-if="item.cerId>0">
                                    <div class="mb-3 fw-bold"><span>{{item.cerName}}</span></div>
                                    <p class="text-muted fs-6">考试通过可获得证书</p>
                                </div>
                                <div v-else>
                                    <div class="mb-3"><span>无证书</span></div>
                                    <p class="text-muted fs-6">考试通过可获得证书</p>
                                </div>
                                <div class="icon-shape icon-sm rounded-circle text-muted card-icon">
                                    <i class="bi bi-award-fill fs-3"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-xl-6 col-lg-6 col-md-6 col-6">
                    <div class="card rounded-0 bg-white border-top border-muted border-5 card-hover-with-icon">
                        <div class="card-body p-3">
                            <div class="d-flex align-items-center justify-content-between">
                                <div>
                                    <div class="mb-3 fw-bold" v-if="item.isTiming"><span>{{item.timingMinute}}</span>分钟</div>
                                    <div class="mb-3 fw-bold" v-else>不限时</div>
                                    <p class="text-muted fs-6">考试限时</p>
                                </div>
                                <div class="icon-shape icon-sm rounded-circle text-muted card-icon">
                                    <i class="bi bi-clock-fill fs-3"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-xl-6 col-lg-6 col-md-6 col-6">
                    <div class="card rounded-0 bg-white border-top border-muted border-5 card-hover-with-icon">
                        <div class="card-body p-3">
                            <div class="d-flex align-items-center justify-content-between">
                                <div>
                                    <div class="mb-3">
                                        <span class="text-success fw-bold" v-if="(item.userExamTimes-item.myExamTimes)>0">
                                            {{item.userExamTimes-item.myExamTimes}}
                                        </span>
                                        <span class="mb-3 text-danger fw-bold" v-else>
                                            0
                                        </span>
                                        /{{item.userExamTimes}}
                                    </div>
                                    <p class="text-muted  fs-6">剩余考试次数</p>
                                </div>
                                <div class="icon-shape icon-sm rounded-circle text-muted card-icon">
                                    <i class="bi bi-circle-half fs-3"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-xl-12 col-lg-12 col-md-12 col-12">
                    <div class="card rounded-0 bg-white border-top border-muted border-5 card-hover-with-icon">
                        <div class="card-body p-3">
                            <div class="d-flex align-items-center justify-content-between">
                                <div>
                                    <div class="mb-3 fw-bold">{{ item.examStartDateTimeStr }} - {{ item.examEndDateTimeStr }}</div>
                                    <p class="text-muted fs-6">考试时间</p>
                                </div>
                                <div class="icon-shape icon-sm rounded-circle text-muted card-icon">
                                    <i class="bi bi-calendar-check-fill fs-3"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-xl-12 col-lg-12 col-md-12 col-12" v-if="(item.cjList && item.cjList.length>0) || (item.subject && item.subject.length>0)">
                    <div class="card rounded-0 bg-white border-top border-muted border-5 card-hover-with-icon">
                        <div class="card-body p-3">
                            <el-collapse accordion>
                                <el-collapse-item v-if="item.cjList && item.cjList.length>0">
                                    <template slot="title">
                                        <span class="fs-4"><i class="bi bi-clock-history me-2"></i>考试记录（{{ item.cjList.length }}）</span>
                                    </template>
                                    <div>
                                        <div class="ms-5 position-relative card-hover-with-icon" v-for="(paper,index) in item.cjList">
                                            <div class="position-absolute top-50 start-0 translate-middle">
                                                <div class="position-relative">
                                                    <i class="el-icon-notebook-2 fs-1"></i>
                                                    <span class="position-absolute top-100 start-100 translate-middle mt-1 fs-6">{{ index+1 }}</span>
                                                </div>
                                            </div>
                                            <el-card shadow="hover" class="mb-2">
                                                <div class="row align-items-center g-3 ms-6">
                                                    <div class="col">
                                                        <ul class="list-inline fw-light">
                                                            <li class="list-inline-item fs-5">
                                                                考试时间：{{ paper.beginDateTime }}-{{ paper.endDateTime }}
                                                            </li>
                                                        </ul>
                                                        <ul class="list-inline fw-light" v-if="item.isTiming">
                                                            <li class="list-inline-item fs-5">
                                                                用时：{{ paper.useTime }}
                                                            </li>
                                                        </ul>
                                                    </div>
                                                    <div class="col-auto px-5">
                                                        <span v-if="item.secrecyScore">
                                                            <span class="card-icon bg-white px-3 py-1 rounded-pill fs-3">{{ paper.score }}</span>
                                                        </span>
                                                        <span v-else class="fw-light text-warning"><i class="bi bi-eye-slash-fill"></i></span>
                                                    </div>
                                                    <div class="col-auto">
                                                        <div class="bg-light p-2 rounded-pill" v-if="item.secrecyPaperContent">
                                                            <el-button type="primary" plain icon="el-icon-view" class="rounded-pill" v-on:click.stop="btnViewClick(paper.id)">查看答卷</el-button>
                                                        </div>
                                                        <el-button v-else disabled class="rounded-pill text-warning"><i class="bi bi-eye-slash-fill"></i></el-button>
                                                    </div>
                                                </div>
                                            </el-card>
                                        </div>
                                    </div>
                                </el-collapse-item>
                                <el-collapse-item v-if="item.subject && item.subject.length>0">
                                    <template slot="title">
                                        <span class="fw-bold"><i class="el-icon-info me-2"></i>考试须知</span>
                                    </template>
                                    <div>
                                        <p v-html="item.subject"></p>
                                    </div>
                                </el-collapse-item>
                            </el-collapse>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</el-card>
<div class="py-8"></div>
<div style="position:fixed;left:0;bottom:0;width:100%;" class="text-center mb-5 opacity-75">
    <el-button-group class="btn-group p-1 bg-gray-300 rounded-pill">
        <template v-if="item.examSubmiting">
            <el-button size="small" icon="el-icon-s-promotion" type="warning" plain :loading="item.examSubmiting" class="rounded-start-pill">正在交卷...</el-button>
        </template>
        <template v-else>
            <el-button size="small" icon="el-icon-s-promotion" type="warning" plain v-on:click="btnStartExamClick" v-if="item.startId>0 && isStart" class="rounded-start-pill">准备就绪，恢复考试</el-button>
            <el-button size="small" icon="el-icon-s-promotion" type="success" plain v-on:click="btnStartExamClick" v-else-if="isStart" class="rounded-start-pill">准备就绪，开始考试</el-button>
        </template>
        <el-button v-on:click="utils.closeLayerSelf" icon="el-icon-back" class="rounded-end-pill" size="small" v-if="isStart">返 回</el-button>
        <el-button v-on:click="utils.closeLayerSelf" icon="el-icon-back" class="rounded-pill" size="small" v-else>返 回</el-button>
    </el-button-group>
</div>
@section Scripts{
<script src="/sitefiles/assets/js/home/exam/examPaperInfo.js" type="text/javascript"></script> }