@page
@{ Layout = "_LayoutApp"; }
@section Styles{
    <style>
        .el-form-item {
            margin-bottom: 0px;
        }
    </style>
}
<div style="position:fixed;left:0;top:0;width:100%;" class="text-center py-3 bg-white z-1">
    考试成绩
</div>
<div class="pb-8"></div>
<div>
    <el-card class="mb-3">
        <el-input placeholder="关键字查询" v-model="form.keyWords" siza="small">
            <el-button slot="append" icon="el-icon-search" v-on:click="btnSearchClick" size="small"></el-button>
        </el-input>
    </el-card>
    <div v-if="total>0">
        <div class="ms-5 position-relative card-hover-with-icon" v-for="(paper,index) in list" v-on:click="btnViewClick(paper)">
            <div class="position-absolute top-50 start-0 translate-middle">
                <div class="position-relative">
                    <i class="el-icon-notebook-2 fs-1"></i>
                    <span class="position-absolute top-100 start-100 translate-middle mt-1 fs-6">{{ index+1 }}</span>
                </div>
            </div>
            <el-card shadow="hover" class="mb-2">
                <div class="row align-items-center">
                    <div class="col">
                        <div class="mb-2">
                            <span>{{ paper.paper.title }}</span>
                        </div>
                    </div>
                </div>
                <div class="row align-items-center g-3 ms-6">
                    <div class="col">
                        <ul class="list-inline fw-light">
                            <li class="list-inline-item fs-5">
                                总分：{{paper.paper.totalScore}}
                            </li>
                            <li class="list-inline-item fs-5">
                                及格分：{{paper.paper.passScore}}
                            </li>
                            <li class="list-inline-item fs-5">
                                交卷时间：{{ paper.paper.examEndDateTimeStr }}
                            </li>
                            <li class="list-inline-item fs-5">
                                用时：{{ paper.useTime }}
                            </li>
                            <li class="list-inline-item fs-5">
                                成绩：
                                <span v-if="paper.paper.secrecyScore">
                                    <span class="fs-3">{{ paper.score }}</span>
                                </span>
                                <span v-else class="fw-light text-warning">成绩未公布</span>
                            </li>
                        </ul>
                        <div class="mt-1 text-end">
                            <div v-if="paper.paper.secrecyPaperContent">
                                <el-button type="primary" plain icon="el-icon-view" class="rounded-pill" v-on:click.stop="btnViewClick(paper)">查看答卷</el-button>
                            </div>
                            <el-button icon="el-icon-view" v-else disabled class="rounded-pill text-warning">不允许查看答卷</el-button>
                        </div>
                    </div>
                </div>
            </el-card>
        </div>
        <div class="my-5 text-center me-5">
            <el-button size="small" icon="el-icon-refresh-right" v-if="list.length>0 && list.length<total" v-on:click="btnLoadMoreClick" :loading="loadMoreLoading">加载更多</el-button>
            <span v-else class="fw-light fs-6">没有更多了</span>
        </div>
    </div>
    <div class="pt-10" v-else>
        <el-empty></el-empty>
    </div>
</div>
<div class="py-8"></div>
<div style="position:fixed;left:0;bottom:0;width:100%;" class="text-center mb-5 opacity-75 animate__animated animate__fadeInUp">
    <el-button-group class="btn-group p-1 bg-gray-300 rounded-pill">
        <el-button v-on:click="location.href=utils.getRootUrl('mine')" icon="el-icon-back" class="rounded-pill" size="small">返 回</el-button>
    </el-button-group>
</div>
@section Scripts{
    <script src="/sitefiles/assets/js/app/exam/examPaperScore.js" type="text/javascript"></script>
}