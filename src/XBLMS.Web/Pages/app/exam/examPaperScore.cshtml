@page
@{ Layout = "_LayoutApp"; }
@section Styles{
    <style>
        .el-form-item {
            margin-bottom: 0px;
        }
    </style>
}
<div style="position:fixed;left:0;top:0;width:100%;" class="text-center py-3 bg-white z-1">
    考试成绩
</div>
<div class="pb-8"></div>
<div>
    <div class="mb-3">
        <el-input prefix-icon="el-icon-search" clearable placeholder="关键字查询" v-model="form.keyWords">
            <el-button slot="append" icon="el-icon-search" v-on:click="btnSearchClick">查 询</el-button>
        </el-input>
    </div>
    <div v-if="total>0">
        <div v-for="(paper,index) in list">
            <el-card shadow="hover" class="mb-3">
                <div slot="header" class="clearfix">
                    <div class="fw-bold">{{ paper.paper.title }}</div>
                </div>
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <div class="position-relative">
                            <i class="el-icon-notebook-2 fs-1"></i>
                            <span class="position-absolute top-100 start-50 translate-middle mt-2 fs-6">{{ index+1 }}</span>
                        </div>
                    </div>
                    <div>
                        <div class="fs-5">
                            <div class="mb-1">总分：{{paper.paper.totalScore}}，及格分：{{paper.paper.passScore}}</div>
                            <div class="mb-1">交卷时间：{{ paper.paper.examEndDateTimeStr }}</div>
                            <div class="mb-1">用时：{{ paper.useTime }}</div>
                            <div>
                                成绩：
                                <span v-if="paper.paper.secrecyScore">
                                    <span class="fw-bold">{{ paper.score }}</span>
                                </span>
                                <span v-else class="fw-light text-danger">成绩未公布</span>
                            </div>
                        </div>
                    </div>
                    <div>
                        <div v-if="paper.paper.secrecyPaperContent">
                            <el-button type="primary" plain icon="el-icon-view" circle v-on:click.stop="btnViewClick(paper)"></el-button>
                        </div>
                        <el-button v-else disabled circle type="danger"><i class="bi bi-eye-slash-fill"></i></el-button>
                    </div>
                </div>
            </el-card>
        </div>
        <div class="my-5 text-center">
            <el-button size="small" icon="el-icon-refresh-right" v-if="list.length>0 && list.length<total" v-on:click="btnLoadMoreClick" :loading="loadMoreLoading">加载更多</el-button>
            <span v-else class="fw-light fs-6">没有更多了</span>
        </div>
    </div>
    <div class="pt-10" v-else>
        <el-empty></el-empty>
    </div>
</div>
<div class="py-8"></div>
<div style="position:fixed;left:0;bottom:0;width:100%;" class="text-center mb-5 animate__animated animate__fadeInUp">
    <el-button-group class="btn-group p-1 bg-gray-300 rounded-pill">
        <el-button v-on:click="location.href=utils.getRootUrl('mine')" icon="el-icon-back" class="rounded-pill" type="primary">返 回</el-button>
    </el-button-group>
</div>
@section Scripts{
    <script src="/sitefiles/assets/js/app/exam/examPaperScore.js" type="text/javascript"></script>
}