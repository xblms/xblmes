@page
@{ Layout = "_LayoutApp"; }
@section Styles{
    <style>
        .el-form-item {
            margin-bottom: 0px;
        }
    </style>
}
<div class="z-2">
    <div v-if="total>0">
        <div v-for="(item,index) in list">
            <el-card class="mb-3 rounded-3">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <div class="position-relative mb-2 text-success">
                            <i class="bi bi-pencil-square fs-2"></i>
                            <span class="position-absolute top-100 start-50 translate-middle mt-2 fs-6">{{ index+1 }}</span>
                        </div>
                    </div>
                    <div>
                        <div>
                            <el-collapse>
                                <el-collapse-item title="包含知识点">
                                    <el-tag type="success" size="mini" class="m-2" v-for="zsd in item.zsds">{{ zsd }}</el-tag>
                                </el-collapse-item>
                            </el-collapse>
                        </div>
                        <div class="d-flex justify-content-between align-items-center mt-2">
                            <span class="fs-5 me-2">共<span class="text-success mx-1">{{ item.tmTotal }}</span>道题</span>
                            <div class="bg-light p-2 rounded-pill">
                                <el-button type="primary" plain icon="el-icon-s-order" class="rounded-pill" v-on:click="btnCreateClick('Group',item.id,item.tmTotal)">开始练习</el-button>
                            </div>
                        </div>
                    </div>
                </div>
            </el-card>
        </div>
        <div class="my-5 text-center">
            <small>没有更多了</small>
        </div>
    </div>
    <div class="pt-10" v-else>
        <el-empty image="/sitefiles/assets/images/nodata.svg" description="暂无练习"></el-empty>
    </div>
</div>
<div class="py-8"></div>
<div style="position:fixed;left:0;bottom:0;width:100%;" class="text-center mb-5 animate__animated animate__fadeInUp">
    <el-button-group>
        <el-button icon="el-icon-s-promotion" type="primary" v-on:click="btnCreateClick('All')">快速开始</el-button>
        <el-button v-on:click="location.href=utils.getIndexUrl()" icon="el-icon-back">返 回</el-button>
    </el-button-group>
</div>
@section Scripts{
    <script src="/sitefiles/assets/js/app/exam/examPractice.js" type="text/javascript"></script>
}